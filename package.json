{
    "name": "test",
    "packageManager": "yarn@4.1.0",
    "private": true,
    "scripts": {
        "server": "yarn workspace @crawl-nest/server",
        "build": "nest build",
        "build:server": "nest build apps/crawl-nest --debug --watch",
        "start:server": "cross-env NODE_ENV=development nest start apps/crawl-nest",
        "local:server": "cross-env NODE_ENV=local nest start apps/crawl-nest --watch",
        "dev:server": "cross-env NODE_ENV=development nest start apps/crawl-nest --watch",
        "debug:server": "cross-env NODE_ENV=development nest start apps/crawl-nest --debug --watch",
        "prod:server": "cross-env NODE_ENV=production node apps/crawl-nest/dist/src/main",
        "g:typecheck": "yarn workspaces foreach -pv run typecheck",
        "lint-front": "lint-staged",
        "prepare": "husky install",
        "init:local:mongo": "docker-compose -f docker-compose-local.yml up -d",
        "init:local:network": "docker network create crawl",
        "server:deploy:build": "docker-compose -f docker-compose-dev.yml up -d"
    },
    "workspaces": [
        "apps/*",
        "packages/*",
        "private-packages/**"
    ],
    "dependencies": {
        "eslint-config-next": "^13.4.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "cross-env": "^7.0.3",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "source-map-support": "^0.5.21",
        "typescript": "5.0.4"
    }
}
