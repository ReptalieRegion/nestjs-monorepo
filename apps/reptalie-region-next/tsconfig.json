{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../configs/tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "exclude": ["**/node_modules", "**/.*/"],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.mts",
        "**/*.js",
        "**/*.cjs",
        "**/*.mjs",
        "**/*.jsx",
        "**/*.json",
        ".next/types/**/*.ts"
    ]
}
